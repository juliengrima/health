{% extends 'base.html.twig' %}

{% block body %}
    <h1>Medication</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ medication.id }}</td>
            </tr>
            <tr>
                <th>Medication</th>
                <td>{{ medication.medication }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('medication_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('medication_edit', { 'id': medication.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
