{% extends '@User/layout.html.twig' %}

{% block body %}
    <h1>Dentists list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Dentist</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dentist in dentists %}
            <tr>
                <td><a href="{{ path('dentist_show', { 'id': dentist.id }) }}">{{ dentist.id }}</a></td>
                <td>{{ dentist.dentist }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('dentist_show', { 'id': dentist.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('dentist_edit', { 'id': dentist.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('dentist_new') }}">Create a new dentist</a>
        </li>
    </ul>
{% endblock %}
