{% extends '@Health/layout.html.twig' %}

{% block body %}

    <h1>APPOINTMENT REGISTER</h1>

    {{ form_start(form) }}

        {{ form_widget(form.date) }}
        {{ form_widget(form.action) }}

    <p>
        <input name="group1" type="radio" id="test1" />
        <label for="test1">Red</label>
        {{ form_widget(form.dentist) }}
    </p>
    <p>
        <input name="group1" type="radio" id="test2" />
        <label for="test2">Yellow</label>
        {{ form_widget(form.insurance) }}
    </p>
    <p>
        <input class="with-gap" name="group1" type="radio" id="test3"  />
        <label for="test3">Green</label>
        {{ form_widget(form.medication) }}
    </p>
    <p>
        <input name="group1" type="radio" id="test4" disabled="disabled" />
        <label for="test4">Brown</label>
        {{ form_widget(form.other) }}
    </p>
    <p>
        <input name="group1" type="radio" id="test4" disabled="disabled" />
        <label for="test4">{{ form_widget(form.vaccines) }}</label>

    </p>
    <p>
        <input name="group1" type="radio" id="test4" disabled="disabled" />
        <label for="test4">Brown</label>
        {{ form_widget(form.xray) }}
    </p>

    <div class="col s6 center">
        <button class="btn-floating btn-large waves-effect waves-light green darken-1 tooltipped"
                type="submit"
                data-position="bottom"
                data-delay="50"
                data-tooltip="Enregistrer">
            <i class="material-icons">check</i>
        </button>
    </div>

    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('appointment_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
